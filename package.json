{
  "name": "architect-debug-lang",
  "displayName": "Architect Debug Lang",
  "description": "Formatting and syntax highlighting for Architect Debug Log",
  "icon": "images/architect.png",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/derekvance21/architect-log-syntax"
  },
  "scripts": {
    "vscode:prepublish": "npm run formatter && npm run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "formatter": "npx shadow-cljs release formatter",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "architect",
        "aliases": [
          "Architect",
          "architect"
        ],
        "extensions": [
          "archlog"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "architect",
        "scopeName": "source.architect",
        "path": "./syntaxes/architect.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.inline.sql": "sql"
        }
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.87.0",
    "shadow-cljs": "^2.28.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "poor-mans-t-sql-formatter": "^1.6.10"
  }
}
